<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_constraint_layout">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:elevation="3dp"
        app:itemIconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        tools:layout_editor_absoluteX="45dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_floating_action_button"
        style="@style/Widget.Design.FloatingActionButton"
        android:contentDescription="@null"
        android:src="@drawable/rounded_add_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="@id/bottom_navigation_view"
        android:layout_margin="15dp"
        app:maxImageSize="40dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_center_floating_action_button"
        style="@style/Widget.Design.FloatingActionButton"
        android:contentDescription="@null"
        android:src="@drawable/rounded_center_focus_strong_24"
        app:fabSize="mini"
        app:layout_constraintCircle="@id/main_floating_action_button"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="60dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_location_floating_action_button"
        style="@style/Widget.Design.FloatingActionButton"
        android:contentDescription="@null"
        android:src="@drawable/rounded_feature_search_24"
        app:fabSize="mini"
        app:layout_constraintCircle="@id/main_floating_action_button"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="60dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>

